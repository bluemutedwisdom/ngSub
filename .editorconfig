root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[**.js]
bin = node
brace_style = end-expand
indent_style = tab
indent_size = 4

[**.html]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
brace_style = expand

[**.coffee]
indent_size = 2
indent_style = space
